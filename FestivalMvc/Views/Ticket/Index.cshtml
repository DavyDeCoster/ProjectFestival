@model FestivalMvc.ViewModel.TicketVM

@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>

@using (Html.BeginForm("Book", "Ticket", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ticket</legend>

        <div class="editor-label">
            Naam:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ticket.Ticketholder)
            @Html.ValidationMessageFor(model => model.Ticket.Ticketholder)
        </div>

        <div class="editor-label">
            Email:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ticket.TicketholderEmail)
            @Html.ValidationMessageFor(model => model.Ticket.TicketholderEmail)
        </div>
        <div class="editor-label">
            Soort ticket:
        </div>
        <div class="editor-field">
            @Html.DropDownList("SelectedTicketType", (SelectList)Model.ListTicketType,"---- Selecteer uw ticket ----", new { @class = "editor-field"})
        </div>
        <div class="editor-label">
            Aantal
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ticket.Amount)
            @Html.ValidationMessageFor(model => model.Ticket.Amount)
        </div>

        <p>
            <input type="submit" value="Bestel" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
